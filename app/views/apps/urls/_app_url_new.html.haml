.modalBox{:id => "add_url_modalBox"}
  = form_tag app_map_url_url, :id => "map-url-form", :method => :put, :remote => true do
    .modalBox-title=t('apps.urls.add_url')
    .modalBox-flash
    .modalBox-content
      %table{:class => "table table-bordered table-hover"}
        %tbody
          %tr
            %td
              = sprite_tag("help", :alt => "?", :class=> "help", :title => t('apps.urls.url_help_html'))
              = label_tag "url", t('apps.urls.url') + ":"
            %td
              = url_field_tag :url, @url, :size => 80, :required => "required", :autofocus => "autofocus",
                :placeholder => t('apps.urls.url_placeholder')
              .form-field-error
    .modalBox-submit= submit_tag t('apps.urls.add_url')