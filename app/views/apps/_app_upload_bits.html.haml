.modalBox{:id => "update_application_bits_modalBox"}
  = form_tag "#", :id => "upload-app-bits-form", :method => :put, :remote => true do
    .modalBox-title=t('apps.upload_bits')
    .modalBox-flash
    .modalBox-content
      %table{:class => "table table-bordered table-hover"}
        %tbody
          %tr
            %td
              = label_tag "deployfrom", t('apps.deploy_from') + ":"
            %td
              = radio_button_tag :deployfrom, 'git', true, :disabled => true
              = t('apps.git')
          %tr
            %td
              = label_tag "gitrepo", t('apps.git_repo') + ":"
            %td
              = text_field_tag :gitrepo, @gitrepo, :size => 50, :required => "required", :autofocus => "autofocus",
                :placeholder => t('apps.git_repo_placeholder'),
                :pattern => "git://[a-z0-9]+([-.]{1}[a-z0-9]+)*.[a-z]{2,5}(([0-9]{1,5})?.*)?.git",
                :title => t('apps.git_repo_title_html')
              .form-field-error
          %tr
            %td
              = label_tag "gitrepo", t('apps.git_branch') + ":"
            %td
              = text_field_tag :gitbranch, @gitbranch, :size => 20, :placeholder => t('apps.git_branch_placeholder')
              .form-field-error
    .modalBox-submit= submit_tag t('apps.upload_bits')