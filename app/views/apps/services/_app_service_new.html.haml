.modalBox{:id => "bind_service_modalBox"}
  = form_tag app_bind_service_url, :id => "bind-service-form", :method => :put, :remote => true do
    .modalBox-title=t('apps.services.add_service')
    .modalBox-flash
    .modalBox-content
      %table{:class => "table table-bordered table-hover"}
        %tbody
          %tr
            %td
              = sprite_tag("help", :alt => "?", :class=> "help", :title => t('apps.services.service_help_html'))
              = label_tag "service", t('apps.services.service') + ":"
            %td
              = select_tag :service, options_for_select(@available_services), :required => "required",
                :autofocus => "autofocus", :class => "service-chosen", :style => "width: 300px;"
              .form-field-error
    .modalBox-submit= submit_tag t('apps.services.add_service')