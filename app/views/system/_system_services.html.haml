%table#system-services-table{:class => "table table-bordered table-hover"}
  %thead
    %tr
      %th.thsort{:scope => "col"}
        = t('system.system_services.name_head')
      %th.thsort{:scope => "col"}
        = t('system.system_services.version_head')
      %th.thsort{:scope => "col"}
        = t('system.system_services.description_head')
  %tbody
    - @system_services.each do |service_type, service_value|
      - service_value.each do |vendor, vendor_value|
        - vendor_value.each do |version, service_info|
          %tr.oddeven
            %td= find_vendor_image(service_info[:vendor]).html_safe
            %td= service_info[:version]
            %td= service_info[:description]