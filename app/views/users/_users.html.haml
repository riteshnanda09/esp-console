%table#users-table{:class => "table table-bordered table-hover"}
  %thead
    %tr
      %th.thsort{:scope => "col"}
        = t('users.email_head')
      %th.thsort{:scope => "col"}
        = t('users.applications_head')
      %th.thsort{:scope => "col", :width => "15%"}
        = t('users.admin_head')
      %th.thcenter{:scope => "col", :width => "10%"}
        = t('users.actions_head')
  %tbody
    = render :partial => "user_item", :collection => @users

= render "user_new"
